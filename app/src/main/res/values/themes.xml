<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema utama aplikasi -->
    <style name="Theme.TemanSapa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Warna utama -->
        <item name="colorPrimary">@color/oceanBlue</item>
        <!-- Warna gelap utama untuk status bar -->
        <item name="colorPrimaryDark">@color/black</item>
        <!-- Warna aksen untuk elemen interaktif -->
        <item name="colorAccent">@color/skyBlue</item>
        <!-- Warna latar belakang aplikasi -->
        <item name="colorSurface">@color/grayishBlue</item>
        <!-- Warna teks di atas warna utama -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Warna teks di atas latar belakang -->
        <item name="colorOnSurface">@color/charcoalBlack</item>
    </style>
</resources>
